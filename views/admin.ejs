<%- include('./partials/header') %>

<% if(success && success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-green-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
    </div>
<% } %>

<% if(error && error.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
    </div>
<% } %>

<div class="w-full min-h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex flex-col items-start">
        <h2 class="text-2xl font-bold mb-5">Admin Panel</h2>
        <div class="flex flex-col">
            <a href="/owners/admin/orders" class="flex items-center gap-2 px-5 py-2 mb-6 bg-zinc-800 text-white rounded-md font-medium hover:bg-zinc-700 transition dark:bg-white dark:text-black dark:hover:bg-gray-200">
                <i class="ri-file-list-3-line"></i>
                View All Orders
            </a>
            <a class="block w-fit mb-2 hover:text-blue-500" href="/owners/admin">All Products</a>
            <a class="block w-fit mb-2 hover:text-blue-500" href="/owners/create-product">Create New Product</a>
            <a class="block w-fit mb-2 text-red-500 hover:text-red-700" href="/owners/logout">Logout</a>
        </div>
    </div>
    
    <div class="w-[75%] flex flex-col gap-5">
        <div class="flex justify-between items-center mb-5">
            <h3 class="text-xl font-semibold">All Products (<%= products.length %>)</h3>
        </div>

        <% if(products.length === 0) { %>
            <div class="text-center py-20">
                <p class="text-gray-500 text-lg">No products yet.</p>
                <a href="/owners/create-product" class="inline-block mt-4 px-5 py-2 bg-blue-500 text-white rounded">Create First Product</a>
            </div>
        <% } else { %>
            <div class="flex items-start gap-5 flex-wrap">
                <% products.forEach(function(product){ %>
                    <div class="w-60 border rounded-md overflow-hidden shadow-sm">
                        <div class="w-full h-52 flex items-center justify-center relative" style="background-color: <%= product.bgcolor %>">
                            <img class="h-[12rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                            
                            <div class="absolute bottom-0 w-full text-center bg-white/50 backdrop-blur-sm py-1">
                                <span class="text-xs font-semibold text-black">Stock: <%= product.stock %></span>
                            </div>
                        </div>
                    
                        <div class="p-3" style="background-color: <%= product.panelcolor %>">
                            <div class="flex justify-between items-center mb-2">
                                <h3 class="text-lg font-semibold leading-tight" style="color: <%= product.textcolor %>"><%= product.name %></h3>
                                <div class="flex flex-col items-end">
                                    <h4 class="font-semibold" style="color: <%= product.textcolor %>">₹<%= product.price %></h4>
                                    <% if(product.discount > 0){ %> 
                                        <span class="text-xs text-red-500">-₹<%= product.discount %></span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="flex gap-2 mt-3">
                                <a href="/owners/edit-product/<%= product._id %>" class="flex-1 text-center px-2 py-1 bg-blue-500 text-white rounded text-xs hover:bg-blue-600">Edit</a>
                                <a href="/owners/delete-product/<%= product._id %>" onclick="return confirm('Are you sure?')" class="flex-1 text-center px-2 py-1 bg-red-500 text-white rounded text-xs hover:bg-red-600">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>