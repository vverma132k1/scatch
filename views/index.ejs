<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-20 bg-gray-50 dark:bg-zinc-900 transition-colors duration-300">
    
    <div class="w-1/2 flex items-center justify-center h-screen border-r border-zinc-200 dark:border-zinc-700">
        <div class="w-full px-32">
            <h3 class="text-4xl text-black dark:text-white font-bold mb-2">welcome to <span class="text-blue-500">Karry</span></h3>
            <h4 class="text-2xl mb-5 text-gray-600 dark:text-gray-400">create your account</h4>
            
            <form autocomplete="off" action="/users/register" method="post">
                <input class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" type="text" placeholder="Full Name" name="fullname">
                <input class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" type="email" placeholder="Email" name="email" autocomplete="off">
                <input class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" type="password" placeholder="Password" name="password" autocomplete="new-password">
                <input class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" type="number" placeholder="Contact Number" name="contact">
            
                <div class="flex gap-2">
                    <input class="block w-2/3 px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" type="text" placeholder="Address" name="address">
                    <input class="block w-1/3 px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" type="number" placeholder="Pincode" name="pincode">
                </div>
            
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold transition cursor-pointer" type="submit" value="Create My Account">
            </form>            
        </div>
    </div>

    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-3xl capitalize mb-5 text-black dark:text-white font-bold">login your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 block rounded-full py-3 mt-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold transition cursor-pointer" type="submit"
                    value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>