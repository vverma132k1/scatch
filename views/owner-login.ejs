<%- include('./partials/header') %>

<% if(error && error.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
    </div>
<% } %>

<% if(success && success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-green-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
    </div>
<% } %>

<div class="w-full h-screen flex items-center justify-center px-20 bg-gray-50 dark:bg-zinc-900 transition-colors duration-300">
    <div class="w-1/3 bg-white dark:bg-zinc-800 p-8 rounded-lg shadow-lg border border-gray-200 dark:border-zinc-700">
        <h4 class="text-3xl font-bold mb-2 text-black dark:text-white">Admin Login</h4>
        <p class="text-gray-600 dark:text-gray-400 mb-5">Access the admin dashboard</p>
        
        <form autocomplete="off" action="/owners/login" method="post">
            <input class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-700 dark:border-zinc-600 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500"
                type="email" placeholder="Admin Email" name="email" required>
            <input class="block w-full px-3 py-2 border rounded-md mb-3 bg-zinc-100 border-zinc-200 dark:bg-zinc-700 dark:border-zinc-600 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500"
                type="password" placeholder="Password" name="password" required>
            <input class="w-full px-5 rounded-full py-3 mt-2 bg-blue-600 text-white font-semibold cursor-pointer hover:bg-blue-700 transition" type="submit" value="Login as Admin">
        </form>
    </div>
</div>

<%- include('./partials/footer') %>